<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500" prefWidth="750" styleClass="vbox-main" stylesheets="/css/BidderStyle.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetenchere.Bidder.View.graphicalUserInterface.BidderGraphicalUserInterface">
    <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="400.0" prefWidth="750.0" styleClass="scroll-pane">
        <VBox fx:id="messagesVBox" spacing="10" styleClass="vbox-content">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </ScrollPane>
    <VBox spacing="10" styleClass="vbox-content">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <TableView fx:id="auctionsTableView" styleClass="table-view">
            <columns>
                <TableColumn fx:id="nameColumn" text="Nom" />
                <TableColumn fx:id="descriptionColumn" text="Description" />
                <TableColumn fx:id="endDateColumn" text="Fin" />
            </columns>
        </TableView>
        <HBox spacing="10" styleClass="hbox-container">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label styleClass="label" text="Quel est votre prix ?" textAlignment="CENTER" />
            <TextField fx:id="offerAmountTextField" prefWidth="200" styleClass="text-field" />
            <Button onAction="#handleCreateBidButton" styleClass="button" text="Soumettre Offre" textAlignment="CENTER" />
        </HBox>
    </VBox>
</VBox>
