<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500" prefWidth="750" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetenchere.Bidder.View.graphicalUserInterface.BidderGraphicalUserInterface">
    <ScrollPane fx:id="scrollPane" prefHeight="200" fitToWidth="true">
        <VBox fx:id="messagesVBox" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>
    <Button text="Test Log" onAction="#handleTestLogButton"/>
    <VBox spacing="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <TableView fx:id="auctionsTableView">
            <columns>
                <TableColumn text="Nom" fx:id="nameColumn" />
                <TableColumn text="Description" fx:id="descriptionColumn" />
                <TableColumn text="Fin" fx:id="endDateColumn" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="Quel est votre prix ?" textAlignment="CENTER" />
            <TextField prefWidth="200" />
            <Button text="Soumettre Offre" textAlignment="CENTER" />
        </HBox>
    </VBox>
</VBox>
